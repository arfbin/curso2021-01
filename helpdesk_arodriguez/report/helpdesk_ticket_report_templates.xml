<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="report_helpdesk_ticket_document">
        <t t-call="web.external_layout">
            <div class="page">
                <div class="oe_structure"/>
            
                <h2 class="mt16">
                    <span t-field="doc.name"/>
                </h2>

                <div class="row mt32 mb32" id="informations">
                    <div class="col-auto col-6 mw-100 mb-2">
                        <strong>Ticket Date:</strong>
                        <p class="m-0" t-field="doc.date"/>
                    </div>
                    <div t-if="doc.partner_id.name" class="col-auto col-6 mw-100 mb-2">
                        <strong>Partner:</strong>
                        <p class="m-0" t-field="doc.partner_id"/>
                    </div>
                </div>

                <table class="table table-sm o_main_table">
                    <thead style="display: table-row-group">
                        <tr>
                            <th name="th_name" class="text-left">Name</th>
                            <th name="th_date" class="text-right">Date</th>
                            <th name="th_time" class="text-right">Time</th>
                        </tr>
                    </thead>
                    <tbody class="sale_tbody">

                        <t t-foreach="doc.action_ids" t-as="action">
                            <tr>
                                <td name="td_name">
                                    <span t-field="action.name"/>
                                </td>
                                <td name="td_date" class="text-right">
                                    <span t-field="action.date"/>
                                </td>
                                <td name="td_time" class="text-right">
                                    <span t-field="action.time"/>
                                </td>
                            </tr>
                        </t>
                    </tbody>
                </table>
            </div>
        </t>
    </template>

    <template id="report_helpdesk_ticket">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="helpdesk_arodriguez.report_helpdesk_ticket_document"/>
            </t>
        </t>
    </template>

</odoo>
