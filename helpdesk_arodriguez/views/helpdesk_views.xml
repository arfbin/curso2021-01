<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_helpdesk_ticket_form" model="ir.ui.view">
        <field name="name">helpdesk.ticket.form</field>
        <field name="model">helpdesk.ticket</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button string="Assing" name="do_assign" type="object" states="new"/>
                    <button string="Pending" name="do_pending" type="object" states="new,assigned"/>
                    <button string="Resolve" name="do_resolved" type="object" states="new,assigned,pending"/>
                    <button string="Cancel" name="do_canceled" type="object" states="new,assigned,pending,revolsed"/>
                    <field name="state" widget="statusbar"/>
                </header>

                <sheet>
                    <div class="oe_tite">
                        <h1><field name="name"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="date"/>
                            <field name="deadline"/>
                        </group>
                        <group>
                            <field name="assigned"/>
                            <field name="time"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <field name="description"/>
                        </page>
                        <page string="Quality">
                            <group string="Corrective">
                                <field name="action_corrective" nolabel="1"/>
                            </group>
                            <group string="Preventive">
                                <field name="action_preventive" nolabel="1"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_helpdesk_ticket_tree" model="ir.ui.view">
        <field name="name">helpdesk.ticket.tree</field>
        <field name="model">helpdesk.ticket</field>
        <field name="arch" type="xml">
            <tree string="Tickets">
                <field name="name"/>
                <field name="date"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

</odoo>
